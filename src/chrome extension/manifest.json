{
    "name": "Fraud Detecter | KubeCentrix",
    "version": "1.0",
    "description": "Detect fraudulent websites and validate customer care numbers.",
    "permissions": [
        "storage",
        "activeTab",
        "webRequest",
        "webNavigation",
        "http://localhost:5000/",
        "Add Other Permissions as needed"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_icon": {
            "16": "static/16icon.png",
            "48": "static/48icon.png",
            "128": "static/128icon.png"
        },
        "default_title": "Fraud Detecter | KubeCentrix",
        "default_popup": "templates/popup.html"
    },
    "icons": {
        "16": "static/16icon.png",
        "48": "static/48icon.png",
        "128": "static/128icon.png"
    },
    "manifest_version": 3
}