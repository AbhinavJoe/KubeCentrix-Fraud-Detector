{
    "name": "Fraud Detecter | KubeCentrix",
    "version": "1.0",
    "description": "Detect fraudulent websites and validate customer care numbers.",
    "permissions": [
        "storage",
        "activeTab",
        "webRequest",
        "webNavigation",
        "http://localhost:5000/",
        "http://localhost:5000/verification",
        "http://localhost:5000/feedback"
    ],
    "host_permissions": [
        "http://localhost:5000"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_icon": {
            "16": "static/16icon.png",
            "32": "static/32icon.png",
            "64": "static/64icon.png"
        },
        "default_title": "Fraud Detecter | KubeCentrix",
        "default_popup": "http://localhost:5000"
    },
    "manifest_version": 3
}