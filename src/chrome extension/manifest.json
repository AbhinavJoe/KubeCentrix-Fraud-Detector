{
    "name": "Fraud Detecter | KubeCentrix",
    "version": "1.0",
    "description": "Detect fraudulent websites and validate customer care numbers.",
    "permissions": [
        "storage",
        "activeTab",
        "webRequest",
        "webNavigation",
        "Add Other Permissions as needed"
    ],
    "background": {
        "service_worker": "js/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/content.js"
            ]
        }
    ],
    "action": {
        "default_icon": {
            "16": "assets/icon.png",
            "48": "assets/icon.png",
            "128": "assets/icon.png"
        },
        "default_title": "Fraud Detecter | KubeCentrix",
        "default_popup": "html/popup.html"
    },
    "icons": {
        "16": "assets/icon.png",
        "48": "assets/icon.png",
        "128": "assets/icon.png"
    },
    "manifest_version": 3
}